{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "CLI - Test",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/cli.py",
            "args": ["--test"],
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/src"
            },
            "envFile": "${workspaceFolder}/.env",
            "console": "integratedTerminal"
        },
        {
            "name": "CLI - Custom Task",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/cli.py",
            "args": ["${input:task}"],
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/src"
            },
            "envFile": "${workspaceFolder}/.env",
            "console": "integratedTerminal"
        },
        {
            "name": "CLI - Task with Repo",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/cli.py",
            "args": ["${input:task}", "--repo", "${input:repo}"],
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/src"
            },
            "envFile": "${workspaceFolder}/.env",
            "console": "integratedTerminal"
        },
        {
            "name": "Main (Discord Bot)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/main.py",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/src"
            },
            "envFile": "${workspaceFolder}/.env",
            "console": "integratedTerminal"
        }
    ],
    "inputs": [
        {
            "id": "task",
            "type": "promptString",
            "description": "Task for the developer agent"
        },
        {
            "id": "repo",
            "type": "promptString",
            "description": "GitHub repo (owner/repo)"
        }
    ]
}
